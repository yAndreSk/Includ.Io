{
  "manifest_version": 3,
  "name": "INCLUD.IO Premium",
  "version": "2.0",
  "description": "Acessibilidade digital e educação imersiva. Leitor de ecrã, modo de leitura e controlos visuais.",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "commands"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "options_page": "options/options.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["content/visual-injector.js"],
      "css": ["content/visual-styles.css", "content/reader-mode.css"]
    },
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["content/content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon-leitura.svg",
        "content/visual-styles.css",
        "content/reader-mode.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "commands": {
    "toggle-reader-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Ativar/Desativar Modo de Leitura"
    },
    "toggle-tts": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Ler/Pausar leitura da página"
    }
  },

  "host_permissions": [
    "http://localhost:8080/"
  ]
}
